{
  "manifest_version": 3,
  "name": "YouTube Downloader",
  "version": "1.0",
  "description": "Sends the current YouTube page URL to a local server for download.",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:4000/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Download YouTube Video"
  }
}
